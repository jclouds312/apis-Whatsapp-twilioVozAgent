
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function newDocHasCorrectOwner(userId) {
      return request.resource.data.userId == userId;
    }
    
    // User-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Global Collections
    // apiLogs collection is publicly readable for listing, but not writable from the client.
    match /apiLogs/{apiLogId} {
        allow list, get: if true;
        allow write: if false;
    }

    // dashboardUsers can be read and written to by any authenticated user.
    // In a production app with roles, you would restrict write access to 'Admins'.
    match /dashboardUsers/{dashboardUserId} {
      allow read, write: if isSignedIn();
    }
  }
}
