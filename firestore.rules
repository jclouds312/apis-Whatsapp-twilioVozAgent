
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function newDocHasCorrectOwner(userId) {
      return request.resource.data.userId == userId;
    }
    
    // User-specific data should only be readable/writable by the owner.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // --- Global Collections ---

    // Allow authenticated users to read logs.
    // Disallow any client-side writes to prevent tampering.
    match /apiLogs/{apiLogId} {
        allow read: if isSignedIn();
        allow write: if false;
    }

    // dashboardUsers can be read and written to by any authenticated user.
    // In a production app with roles, you would restrict write access to 'Admins'.
    match /dashboardUsers/{dashboardUserId} {
      allow read, write: if isSignedIn();
    }
  }
}
