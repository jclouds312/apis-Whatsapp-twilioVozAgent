
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function newDocHasCorrectOwner(userId) {
      return request.resource.data.userId == userId;
    }
    
    // User-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // --- Global Collections ---

    // Rule for the entire apiLogs collection
    match /apiLogs {
      // Allow anyone to list the collection
      allow list: if true;
      // Deny writing to the collection directly
      allow write: if false; 
    }

    // Rule for individual documents within apiLogs
    match /apiLogs/{apiLogId} {
        // Allow anyone to get a single document
        allow get: if true;
        // Deny writing from the client
        allow write: if false;
    }

    // dashboardUsers can be read and written to by any authenticated user.
    // In a production app with roles, you would restrict write access to 'Admins'.
    match /dashboardUsers/{dashboardUserId} {
      allow read, write: if isSignedIn();
    }
  }
}
